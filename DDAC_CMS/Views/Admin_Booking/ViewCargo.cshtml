@model IEnumerable<DDAC_CMS.Models.Cargo>

@{
    ViewBag.Title = "ViewCargo";
}

<body style='background-color:ghostwhite'>
    <br><br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="box-title">
                <b>Cargo Details</b>
            </h3>
        </div>

        <div class="panel-body">
            <div class="form-group">
                @Html.ActionLink("Back to Booking", "ViewBooking", null, new { @class = "btn btn-primary" })
            </div>

            <table class="table table-hover table-bordered table-condensed" id="cargoes">
                <thead>
                    <tr>
                        <td>
                            <b>Cargo Name</b>
                        </td>
                        <td>
                            <b>Quantity</b>
                        </td>
                        <td>
                            <b>Total Weight</b>
                        </td>
                        <td>
                            <b>Item Registered Date</b>
                        </td>
                        <td>
                            <b>Created by</b>
                        </td>
                        <td>
                            <b>Customer Name</b>
                        </td>
                        <td>
                            <b>Cargoess Location</b>
                        </td>
                        <td>
                            <b>Cargoes Destination</b>
                        </td>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalWeight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegisteredDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Port.PortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Port1.PortName)
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            <p class="box-title"><b>Total Cargoes till @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now)  : </b><span class="label label-primary">@Model.Count()</span></p>
        </div>
    </div>
</body>


@section scripts{

    <script src="~/Scripts/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <script>
        $(function () {
            $("#cargoes").DataTable();
            $('#cargoes1').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "dom": 't'
            });
        });
    </script>
}


