@model DDAC_CMS.Models.Cargo

@{
    ViewBag.Title = "Delete";
}

<body style='background-color:ghostwhite'>
    <div class="row">
        <div class="col-lg-offset-2 col-md-8">
            <br />
            <div class="" style="background-color: #ffffff; padding: 20px; border-radius: 20px; box-shadow: 0px 0px 5px;">

                <h4>Are you sure you want to delete this?</h4>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        <label><strong> Cargoes Name : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        <label><strong> Quantity : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>

                    <dt>
                        <label><strong> Total Weight : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TotalWeight)
                    </dd>

                    <dt>
                        <label><strong> Created On : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.RegisteredDate)
                    </dd>

                    <dt>
                        <label><strong> Created By : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AspNetUser.Email)
                    </dd>

                    <dt>
                        <label><strong> Customer Name : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Customer.Name)
                    </dd>

                    <dt>
                        <label><strong> Cargoes Location : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Port.PortName)
                    </dd>

                    <dt>
                        <label><strong> Destination : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Port1.PortName)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Delete" class="btn btn-success" /> &nbsp;&nbsp;&nbsp;
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </div>
                }
            </div>
        </div>
    </div>
</body>