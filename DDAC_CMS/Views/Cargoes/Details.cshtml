@model DDAC_CMS.Models.Cargo

@{
    ViewBag.Title = "Details";
}

<body style='background-color:ghostwhite'>
    <div class="row">
        <div class="col-lg-offset-2 col-md-8">
            <br />
            <div class="" style="background-color: #ffffff; padding: 20px; border-radius: 20px; box-shadow: 0px 0px 5px;">
                <div>
                    <h4>Shipping Schedule Details</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            <b>Cargoes Name :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            <b>Quantity:</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>

                        <dt>
                            <b>Total Weight :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TotalWeight)
                        </dd>

                        <dt>
                            <b>Created On :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RegisteredDate)
                        </dd>

                        <dt>
                            <b>Created By :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AspNetUser.Email)
                        </dd>

                        <dt>
                            <b>Customer Name :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Customer.Name)
                        </dd>

                        <dt>
                            <b>Cargoes Location :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Port.PortName)
                        </dd>

                        <dt>
                            <b>Cargoes Destination :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Port1.PortName)
                        </dd>

                    </dl>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })&nbsp;&nbsp;&nbsp;
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
                <br>
                <br>
            </div>
        </div>
    </div>
</body>