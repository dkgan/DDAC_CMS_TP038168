@model DDAC_CMS.Models.ShippingSchedule

@{
    ViewBag.Title = "Delete";
}

<body style='background-color:ghostwhite'>
    <div class="row">
        <div class="col-lg-offset-2 col-md-8">
            <br />
            <div class="" style="background-color: #ffffff; padding: 20px; border-radius: 20px; box-shadow: 0px 0px 5px;">

                <h4>Are you sure you want to delete this?</h4>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        <label><strong> Shipping ID : </strong></label>
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ShippingScheduleName)
                    </dd>

                    <dt>
                        <label><strong> Departure Date & Time : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DepartureDateTime)
                    </dd>

                    <dt>
                        <label><strong> Arrival Date & Time : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ArrivalDateTime)
                    </dd>

                    <dt>
                        <label><strong> Status : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SpaceAvailable)
                    </dd>

                    <dt>
                        <label><strong> Departure Port Name : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Port.PortName)
                    </dd>

                    <dt>
                        <label><strong> Arrival Port Name : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Port1.PortName)
                    </dd>

                    <dt>
                        <label><strong> Vessel Name : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Vessel.VesselName)
                    </dd>

                    <dt>
                        <label><strong> Created By : </strong></label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AspNetUser.FullName)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color text-center">
                        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </div>
                }
            </div>
        </div>
    </div>
</body>