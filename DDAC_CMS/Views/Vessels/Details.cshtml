@model DDAC_CMS.Models.Vessel

@{
    ViewBag.Title = "Details";
}

<body style='background-color:ghostwhite'>
    <div class="row">
        <div class="col-lg-offset-2 col-md-8">
            <br />
            <div class="" style="background-color: #ffffff; padding: 20px; border-radius: 20px; box-shadow: 0px 0px 5px;">
                <div>
                    <h4>Vessel Details</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            <b>Vessel Name :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.VesselName)
                        </dd>

                        <dt>
                            <b>Vessel Type :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.VesselType)
                        </dd>

                        <dt>
                            <b>Vessel Weight :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.VesselWeight)
                        </dd>

                        <dt>
                            <b>Total Container :</b>
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TotalContainers)
                        </dd>

                    </dl>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.VesselID}, new { @class = "btn btn-success" })&nbsp;&nbsp;&nbsp; 
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
                <br>
                <br>
            </div>
        </div>
    </div>
</body>
