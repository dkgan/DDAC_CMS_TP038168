@model IEnumerable<DDAC_CMS.Models.Vessel>

@{
    ViewBag.Title = "Index";
}

<body style='background-color:ghostwhite'>
    <br><br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="box-title">
                <b>Vessels</b>
            </h3>
        </div>
        <div class="panel-body">

            <div class="form-group">
                @Html.ActionLink("Create New Vessel", "Create", null, new { @class = "btn btn-primary" })
            </div>

            <table class="table table-hover table-bordered table-condensed" id="Vessels">
                <thead>
                    <tr>
                        <td>
                            <b>Vessel Name</b>
                        </td>
                        <td>
                            <b>Vessel Type</b>
                        </td>
                        <td>
                            <b>Vessel Weight</b>
                        </td>
                        <td>
                            <b>Total Container</b>
                        </td>
                        <td>
                            <b>Option</b>
                        </td>
                        <td>
                            <b>Option</b>
                        </td>
                        <td>
                            <b>Option</b>
                        </td>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VesselName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VesselType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VesselWeight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalContainers)
                        </td>
                        
                        <td class="form-action">
                            <span style="color: #ff0000;">
                                <a href="@Url.Action("Details", "Vessels", new { id = item.VesselID })" class="btn btn-success btn-block">
                                    <i class="fa fa-unlock">&nbsp;</i>Details
                                </a>
                            </span>
                        </td>
                        <td class="form-action">
                            <span style="color: #ff0000;">
                                <a href="@Url.Action("Edit", "Vessels", new { id = item.VesselID })" class="btn btn-warning btn-block">
                                    <i class="fa fa-unlock">&nbsp;</i>Edit
                                </a>
                            </span>
                        </td>
                        <td class="form-action">
                            <span style="color: #ff0000;">
                                <a href="@Url.Action("Delete", "Vessels", new { id = item.VesselID })" class="btn btn-danger btn-block">
                                    <i class="fa fa-unlock">&nbsp;</i>Delete
                                </a>
                            </span>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            <p class="box-title"><b>Total Vessels till @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now)  : </b><span class="label label-primary">@Model.Count()</span></p>
        </div>
    </div>
</body>


@section scripts{

    <script src="~/Scripts/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <script>
        $(function () {
            $("#Vessels").DataTable();
            $('#Vessels2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "dom": 't'
            });
        });
    </script>
}
